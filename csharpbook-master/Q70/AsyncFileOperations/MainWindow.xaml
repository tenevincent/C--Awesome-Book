<Window x:Class="AsyncFileOperations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncFileOperations"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Click="OnSynchronous">Synchronous</Button>
        <Button Click="OnAsynchronous">Asynchronous</Button>
        <Button Click="OnWithCancellation">With cancellation</Button>
        <Button Click="OnCancel">Cancel</Button>
        <Button Click="OnWithProgress">With progress</Button>
        <ProgressBar Name="ProgressBar" Height="20" Minimum="0" Maximum="100"/>
    </StackPanel>
</Window>
